<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:SellGold.PageModels.Promotions"
             x:Class="SellGold.Pages.Promotions.PromotionPage"
             Title="Promoção">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Nome -->
            <Entry Placeholder="Nome do produto" Text="{Binding Name}">
                <Entry.Triggers>
                    <DataTrigger TargetType="Entry" Binding="{Binding Name}" Value="">
                        <Setter Property="TextColor" Value="Red" />
                    </DataTrigger>
                </Entry.Triggers>
            </Entry>

            <!-- Data de início -->
            <Label Text="Data de Início" />
            <DatePicker Date="{Binding StartDate}" />

            <!-- Data de fim -->
            <Label Text="Data de Fim" />
            <DatePicker Date="{Binding EndDate}" />

            <!-- Percentual de desconto -->
            <Label Text="Percentual de Desconto (%)" />
            <Entry Text="{Binding DiscountPercentage}" Keyboard="Numeric" />

            <!-- Descrição -->
            <Entry Placeholder="Descrição" Text="{Binding Description}">
                <Entry.Triggers>
                    <DataTrigger TargetType="Entry" Binding="{Binding Description}" Value="">
                        <Setter Property="TextColor" Value="Red" />
                    </DataTrigger>
                </Entry.Triggers>
            </Entry>

            <!-- Botão salvar -->
            <Button Text="Salvar Promoção"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="Green"
                    TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>