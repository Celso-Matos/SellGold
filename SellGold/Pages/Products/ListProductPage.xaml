<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:datagrid="clr-namespace:Maui.DataGrid;assembly=Maui.DataGrid"
             xmlns:pageModels="clr-namespace:SellGold.PageModels.Products"
             x:Class="SellGold.Pages.Products.ListProductPage"
             Title="Produtos">
    <Grid>
        <!-- DataGrid -->
        <datagrid:DataGrid ItemsSource="{Binding Products}"
                       HeaderBackground="LightGray"
                       RowHeight="40"
                       HeaderHeight="50"
                       BorderColor="Gray"
                       BorderThickness="1">

            <!-- Definição manual das colunas -->
            <datagrid:DataGrid.Columns>
                <datagrid:DataGridColumn Title="ID" PropertyName="ProductId" />
                <datagrid:DataGridColumn Title="Nome" PropertyName="Name" />
                <datagrid:DataGridColumn Title="Descrição" PropertyName="Description" />
            </datagrid:DataGrid.Columns>
        </datagrid:DataGrid>

        <!-- Indicador de carregamento -->
        <ActivityIndicator IsRunning="{Binding IsBusy}"
                       IsVisible="{Binding IsBusy}"
                       Color="Blue"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
    </Grid>

</ContentPage>